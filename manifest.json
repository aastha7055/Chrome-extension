{
  "manifest_version": 3,
  "name": "BreakBuddy",
  "version": "1.0",
  "description": "A Chrome extension that reminds you to take a break.",
  "permissions": [
    "alarms",
    "windows",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/image.png",
    "48": "images/image.png",
    "128": "images/image.png"
  }
}
